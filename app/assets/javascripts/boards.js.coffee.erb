jQuery ->
	if ('.pagination').length
		$(window).scroll ->
			url = $('.pagination .next_page').attr('href')
			if url && $(window).scrollTop() > $(document).height() - $(window).height() - 50
				$('.pagination').html('<div id="trie">Att, je trie les Punaises...</br><div class="loading"><%= image_tag "379.gif" %></div></div>')
				$.getScript(url)
		$(window).scroll()